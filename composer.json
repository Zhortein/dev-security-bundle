{
  "name": "zhortein/dev-security-bundle",
  "type": "symfony-bundle",
  "description": "Secure your Symfony dev environment without losing comfort.",
  "keywords": ["symfony", "symfony-bundle", "security", "dev", "development"],
  "homepage": "https://github.com/zhortein/dev-security-bundle",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/zhortein/dev-security-bundle/issues",
    "source": "https://github.com/zhortein/dev-security-bundle",
    "docs": "https://github.com/zhortein/dev-security-bundle/tree/main/docs"
  },
  "authors": [
    {
      "name": "David Renard",
      "email": "david.renard.21@free.fr",
      "homepage": "https://www.david-renard.fr",
      "role": "Owner, Developer"
    }
  ],
  "require": {
    "php": ">=8.3",
    "symfony/dependency-injection" : "~7.0",
    "symfony/config" : "~7.0",
    "symfony/http-kernel": "~7.0",
    "symfony/yaml": "~7.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^v3.75.0",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-doctrine": "^2.0",
    "phpstan/phpstan-symfony": "^2.0",
    "phpunit/php-code-coverage": "^12.3.1",
    "phpunit/phpunit": "^12.2.5",
    "roave/security-advisories": "dev-latest",
    "symfony/framework-bundle": "^7.0",
    "symfony/phpunit-bridge": "^7.3",
    "symfony/test-pack": "^1.0"
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Zhortein\\DevSecurityBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zhortein\\DevSecurityBundle\\Tests\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-develop": "1.0.x-dev"
    }
  },
  "scripts": {
    "php-cs-fixer": "php-cs-fixer fix src --verbose --rules=@Symfony"
  }
}